<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonDelete"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="DEL"
        android:backgroundTint="@color/light_gray"
       app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        app:layout_constraintLeft_toRightOf="@id/buttonAC"
        app:layout_constraintRight_toLeftOf="@id/buttonPorcentaje"
        app:layout_constraintBottom_toTopOf="@id/button8"

        />
    <Button
        android:id="@+id/buttonAC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="AC"
        android:backgroundTint="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
      app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonDelete"
        app:layout_constraintBottom_toTopOf="@id/button7"



        />
    <Button
        android:id="@+id/buttonPorcentaje"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="%"
        android:backgroundTint="@color/light_gray"

        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        app:layout_constraintLeft_toRightOf="@id/buttonDelete"
        app:layout_constraintRight_toLeftOf="@id/buttonAddition"
        app:layout_constraintBottom_toTopOf="@id/button9"
        />
    <Button
        android:id="@+id/buttonAddition"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/buttonSubtration"
        app:layout_constraintLeft_toRightOf="@id/button3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonIgual"


        />
    <Button
        android:id="@+id/buttonSubtration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/buttonMultiplication"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonAddition"
        app:layout_constraintLeft_toRightOf="@id/button6"
        />
    <Button
        android:id="@+id/buttonMultiplication"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="*"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/buttonDividir"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonSubtration"
        app:layout_constraintLeft_toRightOf="@id/button9"
        />
    <Button
        android:id="@+id/buttonDividir"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="/"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/editTextNumber"
        app:layout_constraintLeft_toRightOf="@id/buttonPorcentaje"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonMultiplication"
        />
    <Button
        android:id="@+id/buttonIgual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/buttonAddition"
        app:layout_constraintLeft_toRightOf="@id/buttondecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/buttondecimal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintLeft_toRightOf="@id/button0"
        app:layout_constraintRight_toLeftOf="@id/buttonIgual"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="numberButtonCliked"
        />
    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button2"
        app:layout_constraintBottom_toTopOf="@id/button0"
        android:onClick="numberButtonCliked"
        />
    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintLeft_toRightOf="@id/button1"
        app:layout_constraintRight_toLeftOf="@id/button3"
        app:layout_constraintBottom_toTopOf="@id/buttonIgual"
        android:onClick="numberButtonCliked"
        />
    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintRight_toLeftOf="@id/buttonAddition"
        app:layout_constraintLeft_toRightOf="@id/button2"
        app:layout_constraintBottom_toTopOf="@id/buttonIgual"
        android:onClick="numberButtonCliked"
        />
    <Button
        android:id="@+id/button4"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button5"
        app:layout_constraintBottom_toTopOf="@id/button1"
        android:onClick="numberButtonCliked"

        />
    <Button
    android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
    android:text="5"
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/button8"
        app:layout_constraintRight_toLeftOf="@id/button6"
        app:layout_constraintLeft_toRightOf="@id/button4"
        app:layout_constraintBottom_toTopOf="@id/button2"
        android:onClick="numberButtonCliked"

    />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/button9"
        app:layout_constraintRight_toLeftOf="@id/buttonSubtration"
        app:layout_constraintLeft_toRightOf="@id/button5"
        app:layout_constraintBottom_toTopOf="@id/button3"
        android:onClick="numberButtonCliked"
        />
    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/buttonAC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button8"
        app:layout_constraintBottom_toTopOf="@id/button4"
        android:onClick="numberButtonCliked"
        />
    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/buttonDelete"
        app:layout_constraintLeft_toRightOf="@id/button7"
        app:layout_constraintRight_toLeftOf="@id/button9"
        app:layout_constraintBottom_toTopOf="@id/button5"
        android:onClick="numberButtonCliked"
        />
    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/buttonPorcentaje"
        app:layout_constraintRight_toLeftOf="@id/buttonMultiplication"
        app:layout_constraintLeft_toRightOf="@id/button8"
        app:layout_constraintBottom_toTopOf="@id/button6"
        android:onClick="numberButtonCliked"
        />
    <Button
        android:id="@+id/button0"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:backgroundTint="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttondecimal"
        android:onClick="numberButtonCliked"

        />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>